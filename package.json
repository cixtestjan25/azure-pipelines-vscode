{
    "name": "yaml-rocket-ship-2",
    "displayName": "YAML Rocket Ship",
    "description": "TODO description",
    "version": "1.139.0",
    "publisher": "nc-rocket",
    "repository": "https://github.com/Microsoft/pipelines-vscode",
    "icon": "assets/ymlfile.png",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:azure-pipelines"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "azure-pipelines",
                "configuration": "./language-configuration.json",
                "filenamePatterns": [
                    ".vsts-ci.yml"
                ],
                "aliases": [
                    "Azure Pipelines"
                ]
            }
        ],
        "grammars": [
            {
                "language": "azure-pipelines",
                "scopeName": "source.yaml",
                "path": "./syntaxes/yaml.tmLanguage.json"
            }
        ],
        "configuration": {
            "title": "Azure Pipelines extension configuration.",
            "properties": {
                "yaml.validate": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/disable validation feature"
                },
                "azure-pipelines.account": {
                    "type": "string",
                    "description": "Your Azure Pipelines account name"
                }
            }
        },
        "configurationDefaults": {
            "[azure-pipelines]": {
                "gitlens.codeLens.scopesByLanguage": [
                    {
                        "language": "azure-pipelines",
                        "scopes": [
                            "document"
                        ]
                    }
                ]
            }
        },
        "snippets": [
            {
                "language": "azure-pipelines",
                "path": "./snippets/ci-snippets.json"
            }
        ],
        "commands": [
            {
                "command": "azure-pipelines.DisplayCurrentSchemaFile",
                "title": "Azure Pipelines: Display Current Schema File"
            },
            {
                "command": "azure-pipelines.LoadLatestTaskSchema",
                "title": "Azure Pipelines: Load Latest Task Schema"
            },
            {
                "command": "azure-pipelines.Signin",
                "title": "Azure Pipelines: Signin"
            },
            {
                "command": "azure-pipelines.Signout",
                "title": "Azure Pipelines: Signout"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "unittest": "node_modules/.bin/mocha -u tdd out/test/*.js",
        "removeschemastore": "node remove-schema-store-settings.js",
        "generateyamlschema": "npm run compile && node ./out/buildtools/generate-yaml-from-json.js"
    },
    "devDependencies": {
        "assert": "1.4.1",
        "typescript": "2.6.1",
        "mocha": "5.2.0",
        "vscode": "1.1.18",
        "tslint": "5.8.0",
        "ts-node": "3.3.0",
        "@types/node": "7.0.43",
        "@types/mocha": "5.2.5",
        "@types/q": "1.5.0",
        "@types/underscore": "1.8.9"
    },
    "dependencies": {
        "keytar": "4.2.1",
        "q": "1.5.1",
        "typed-rest-client": "1.0.7",
        "underscore": "1.9.1",
        "vscode-languageclient": "4.4.0",
        "vscode-nls": "3.2.4",
        "vscode-uri": "1.0.5",
        "yaml-language-server": "0.0.17"
    }
}
